APP_NAME="Donation CMS"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=donation_cms
DB_USERNAME=postgres
DB_PASSWORD=secret

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_DRIVER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@donationcms.local
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINTS=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Donation CMS Custom Config
ORGANIZATION_NAME="Your NGO Name"
ORGANIZATION_ADDRESS="123 Main Street, Dhaka, Bangladesh"
ORGANIZATION_PHONE="+8801234567890"
ORGANIZATION_EMAIL="info@ngo.org"
ORGANIZATION_TAX_ID="12345678"
ORGANIZATION_WEBSITE="https://ngo.org"

# Payment Gateway
PAYMENT_GATEWAY=stripe
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Fiscal Year (July to June - Bangladesh)
FISCAL_YEAR_START_MONTH=7

# Admin Default Account (will be created on first migration)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=Password@123

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=${APP_KEY}
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800

# Rate Limiting
RATE_LIMIT_API=1000
RATE_LIMIT_API_PREMIUM=5000
RATE_LIMIT_LOGIN=5

# Email Configuration
SEND_EMAIL_CONFIRMATION=true
SEND_DONATION_RECEIPT=true
SEND_THANK_YOU_LETTER=true
RECEIPT_ATTACH_TO_EMAIL=true

# PDF Generation
PDF_GENERATOR=dompdf
PDF_STORAGE_PATH=storage/app/pdf

# Recurring Billing
RECURRING_PROCESS_TIME=00:00
RECURRING_RETRY_TIME=14:00
RECURRING_MAX_RETRIES=3
RECURRING_RETRY_DELAY_HOURS=24

# Timezone
APP_TIMEZONE=Asia/Dhaka

# Feature Flags
FEATURE_RECURRING_DONATIONS=true
FEATURE_ANONYMOUS_DONATIONS=true
FEATURE_TAX_CERTIFICATES=true
FEATURE_IMPACT_UPDATES=false
FEATURE_DONOR_REFERRAL=false
